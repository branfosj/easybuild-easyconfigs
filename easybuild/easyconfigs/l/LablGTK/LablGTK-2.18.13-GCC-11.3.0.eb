# This easyconfig was created by the BEAR Software team at the University of Birmingham.
easyblock = 'ConfigureMake'

name = 'LablGTK'
version = '2.18.13'

homepage = "https://github.com/garrigue/lablgtk/"
description = """LablGTK: an interface to the GIMP Tool Kit"""

toolchain = {'name': 'GCC', 'version': '11.3.0'}

source_urls = ['https://github.com/garrigue/lablgtk/archive/refs/tags/']
sources = ['%(version)s.tar.gz']
checksums = ['7b9e680452458fd351cf8622230d62c3078db528446384268cd0dc37be82143c']

builddependencies = [
    ('pkgconf', '1.8.0'),
]

dependencies = [
    ('OCaml', '4.14.0'),
    ('GTK2', '2.24.33'),
    ('librsvg', '2.55.1'),
]

prebuildopts = 'make depend &&'
buildopts = 'world'

sanity_check_paths = {
    'files': ['bin/lablgtk2'],
    'dirs': [],
}

sanity_check_commands = ['lablgtk2 --help']

moduleclass = 'data'
